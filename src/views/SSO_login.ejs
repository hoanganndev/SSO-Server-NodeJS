<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
        />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <title>SSO Server login</title>
    </head>
    <style>
        .bi-facebook {
            font-size: 30px;
            color: rgb(41, 38, 207);
            cursor: pointer;
            padding: 0 10px;
        }
        .bi-google {
            font-size: 30px;
            color: rgb(228, 53, 22);
            cursor: pointer;
            padding: 0 10px;
        }
        .login-container {
            padding-top: 50px;
        }
        .none-flash {
            display: none;
        }
        #spanResetPassword {
            cursor: pointer;
            color: blue;
        }
        #spanResetPassword:hover {
            color: rgb(57, 57, 160);
        }
    </style>
    <script>
        $(document).ready(function () {
            $("#btnLogin").on("click", function () {
                const username = $("#username").val();
                const password = $("#password").val();
                const serviceURL = $("#redireactURL").val();
                $("#flashMessage").empty("");
                $.ajax({
                    type: "POST",
                    url: `${window.location.origin}/login`, // BaseURL
                    data: { username, password, serviceURL },
                    withCredentials: true,
                    success: function (data) {
                        $("#flashMessage").addClass("none-flash");
                        const redireactURL = `${data.redirectURL}/code?ssoToken=${data.code}`;
                        window.location.href = redireactURL;
                    },
                    error: function (request, status, error) {
                        const message = request.responseText;
                        errorMessage = message.replace(/['"]+/g, "");
                        $("#password").val("");
                        $("#flashMessage").removeClass("none-flash");
                        $("#flashMessage").append(errorMessage);
                    },
                });
            });
            // login with google
            $("#iconGoogle").on("click", function () {
                const serviceURL = $("#redireactURL").val();
                localStorage.removeItem("clientURL");
                localStorage.setItem("clientURL", serviceURL);
                window.location.href = "/auth/google";
            });
            // login with facebook
            $("#iconFacebook").on("click", function () {
                const serviceURL = $("#redireactURL").val();
                localStorage.removeItem("clientURL");
                localStorage.setItem("clientURL", serviceURL);
                window.location.href = "/auth/facebook";
            });
            // press enter to login
            const input = document.getElementById("password");
            input.addEventListener("keypress", function (event) {
                if (event.key === "Enter") {
                    event.preventDefault();
                    document.getElementById("btnLogin").click();
                }
            });
            // // open modal
            // $("#spanResetPassword").on("click", function () {
            //     $("#resetPasswordModal").modal("show");
            // });
        });
    </script>
    <body>
        <input
            type="text"
            hidden
            value="<%=redireactURL %>"
            id="redireactURL"
        />
        <div class="container">
            <div class="row">
                <div class="login-container col-6 mx-auto">
                    <fieldset class="border rounded-3 p-3">
                        <legend class="float-none w-auto px-3">
                            SSO Login Form
                        </legend>
                        <div
                            class="alert alert-danger my-1 none-flash"
                            role="alert"
                            id="flashMessage"
                        ></div>
                        <div class="mb-3 col-12">
                            <label class="form-label">Username</label>
                            <input
                                type="text"
                                class="form-control"
                                name="username"
                                id="username"
                            />
                            <div id="emailHelp" class="form-text">
                                We'll never share your email with anyone else.
                            </div>
                        </div>
                        <div class="mb-3 col-12">
                            <label class="form-label">Password</label>
                            <input
                                type="password"
                                class="form-control"
                                name="password"
                                id="password"
                            />
                        </div>

                        <div class="mb-3 form-check">
                            <input
                                type="checkbox"
                                class="form-check-input"
                                id="Check1"
                            />
                            <label class="form-check-label" for="Check1">
                                Check me now
                            </label>
                        </div>
                        <button
                            type="button"
                            id="btnLogin"
                            class="btn btn-primary"
                        >
                            Login
                        </button>
                        <div class="mt-2">
                            <a href="/forgot-password">Forgot password ?</a>
                        </div>
                        <hr />
                        <div>
                            <div class="d-flex justify-content-center">
                                <span>or login with</span>
                            </div>
                            <div
                                class="social d-flex justify-content-center mt-2"
                            >
                                <i id="iconGoogle" class="bi bi-google"></i>
                                <i
                                    id="iconFacebook"
                                    class="bi bi-facebook ms-3"
                                ></i>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div
            class="modal fade"
            id="resetPasswordModal"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
        >
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                            Modal title
                        </h5>
                        <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                        ></button>
                    </div>
                    <div class="modal-body">...</div>
                    <div class="modal-footer">
                        <button
                            type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal"
                        >
                            Close
                        </button>
                        <button type="button" class="btn btn-primary">
                            Save changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
