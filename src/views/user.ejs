<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>List Users</title>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="user-infor-container">
                    <form action="/create-user" method="POST">
                        <div class="pt-3"><h3>Create a new user</h3></div>
                        <div class="mb-3 mt-3 col-6">
                            <label for="email" class="form-label">
                                Email address
                            </label>
                            <input
                                placeholder="example@gmail.com"
                                type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                required
                            />
                        </div>
                        <div class="col-6"></div>
                        <div class="mb-3 col-6">
                            <label for="password" class="form-label">
                                Password
                            </label>
                            <input
                                placeholder="123456"
                                type="password"
                                class="form-control"
                                id="password"
                                name="password"
                                required
                            />
                        </div>
                        <div class="col-6"></div>
                        <div class="mb-3 col-6 pb-1">
                            <label for="username" class="form-label">
                                Username
                            </label>
                            <input
                                placeholder="marcus"
                                type="text"
                                class="form-control"
                                id="username"
                                name="username"
                                required
                            />
                        </div>
                        <div class="col-12">
                            <button
                                type="submit"
                                class="btn btn-outline-primary"
                            >
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
                <div class="table-users mt-3">
                    <div class="pt-3"><h3>Table users:</h3></div>
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr class="table-warning">
                                <th scope="col">ID</th>
                                <th scope="col">Email</th>
                                <th scope="col">Username</th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% listUsers.forEach(function(item,index){ %>
                            <tr>
                                <th scope="row"><%= index+1%></th>
                                <td><%= item.email%></td>
                                <td><%= item.username%></td>
                                <td class="text-center">
                                    <a
                                        class="btn btn-outline-warning me-2"
                                        href="/update-user/<%= item.id%>"
                                    >
                                        Update
                                    </a>

                                    <form
                                        action="/delete-user/<%= item.id%>"
                                        method="POST"
                                        style="display: inline"
                                        class="ms-2"
                                    >
                                        <button
                                            type="submit"
                                            class="btn btn-outline-danger"
                                        >
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
